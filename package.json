{
  "name": "personal-website-server",
  "version": "1.0.0",
  "description": "server for personal website",
  "main": "app.js",
  "dependencies": {
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "log4js": "^6.3.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/preset-env": "^7.11.5",
    "babel-loader": "^8.1.0",
    "nodemon": "^2.0.4",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.12",
    "webpack-shell-plugin": "^0.5.0"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "webpack --config webpack.config.prod.js",
    "start": "npm run build & node dist/bundle.js",
    "run:dev": "nodemon --watch dist dist/bundle.js",
    "start:dev": "webpack --progress",
    "start:compose": "webpack --progress --env.USING_COMPOSE=yes & docker-compose up",
    "run:docker": "docker run --init --rm --publish 3000:3000 db-server",
    "build:docker": "docker build -t db-server .",
    "start:docker": "npm run build && npm run build:docker && npm run run:docker"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dbertozzi/davidbertozzi-server.git"
  },
  "author": "David",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/dbertozzi/davidbertozzi-server/issues"
  },
  "homepage": "https://github.com/dbertozzi/davidbertozzi-server#readme"
}